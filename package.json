{
  "name": "authentication",
  "version": "1.0.0",
  "description": "Modern authentication system with NestJS backend and React frontend",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm --workspace server run start:dev",
    "dev:client": "npm --workspace client run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm --workspace server run build",
    "build:client": "npm --workspace client run build",
    "install:all": "npm install",
    "start:server": "npm --workspace server run start:prod",
    "test": "npm run test:server && npm run test:client",
    "test:server": "npm --workspace server run test",
    "test:client": "npm --workspace client run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "authentication",
    "nestjs",
    "react",
    "jwt",
    "postgresql",
    "fullstack"
  ],
  "author": "",
  "license": "MIT"
}
